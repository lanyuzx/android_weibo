<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="45dp"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/home_adpater_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/home_adpater_vip"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="北京交通广播"
                    android:textSize="14sp"
                    android:textColor="@color/AppColor"
                    android:id="@+id/home_adpater_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/home_adpater_level"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/home_adpater_source"
                android:layout_marginTop="5dp"
                android:text="13分钟前   来源自weibo.com"
                android:textSize="10sp"
                android:textColor="@color/App999Color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/home_adpater_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="14dp"
        android:textColor="@color/App333Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/home_adpater_biglagre_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_adpater_grid_imageview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
