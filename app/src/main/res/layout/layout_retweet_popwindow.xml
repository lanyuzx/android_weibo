<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/AppFFColor"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/AppFFColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_timeline_fastpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="12dp"
            android:textColor="@color/App666Color"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:text="快转"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/AppFFColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_timeline_retweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="12dp"
            android:textColor="@color/App666Color"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:text="转发"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/AppFFColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_timeline_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="12dp"
                android:textColor="@color/App666Color"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:text="分享"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="5dp"
            android:src="@mipmap/ic_timeline_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_timeline_pengyouquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_timeline_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_timeline_qqkongjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
